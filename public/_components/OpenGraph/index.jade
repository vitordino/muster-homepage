mixin OpenGraph(base, site, {current})
	-
		const imageUrl=`${site.root}/assets/images/og-image.png`
		const locale='en_US'
		const {title, description, __link: link, __contents} = current || {}
		const page = {
			title: title ? `${title} | ${site.title}` : site.title,
			description: description || site.description,
		}
		const isHome = link === '/'
	-

	meta(property='og:site_name' content=site.title)
	meta(property='og:title' content=page.title)
	meta(property='og:description' content=page.description)
	meta(property='og:type' content='website')
	meta(property='og:locale' content=locale)
	meta(property='og:url' content=site.root)

	meta(property='og:image' content=imageUrl)
	meta(property='og:image:url' content=imageUrl)
	meta(property='og:image:type' content='image/png')
	meta(property='og:image:width' content=1200)
	meta(property='og:image:height' content=630)

	meta(name='twitter:card' content='summary')
	meta(name='twitter:site' content='kunstdesign')
	meta(name='twitter:creator' content='kunstdesign')
	meta(name='twitter:title' content=page.title)
	meta(name='twitter:description' content=page.description)
	if hasImage
		meta(name='twitter:image' content=imageUrl)
